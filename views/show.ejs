<% include partials/header %>

<div class="ui main text container segment">
<div>
    <div class="ui huge header"><%= post.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.image %>" alt="header image">
            <div class="content">
                <span><%= post.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%= post.body %></p>
            </div>
            <a class="ui red basic button" href="/posts/<%= post._id%>/edit">Update</a>
            <form method="POST" action="/posts/<%= post._id%>?_method=DELETE">
                <button class="ui red basic button">DELETE</button>
            </form>
        </div>
    </div>
</div>
</div>

<% include partials/footer %>